{
  "name": "waiter",
  "private": true,
  "version": "0.0.1",
  "main": "./out/app/main.js",
  "author": {
    "name": "James Rundquist",
    "email": "james@roboticdonut.com"
  },
  "description": "An AI assisted script wiring tool",
  "scripts": {
    "format": "pprettier --write '**/*.{ts,tsx,d.ts,js,json,html,scss,md,yml,yaml}' '!node_modules/**'",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "clean": "rimraf out && rimraf dist",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config",
    "launch:mac": "if [[ ! -a dist/mac-arm64/waiter.app ]]; then npm run build:mac; fi; open dist/mac-arm64/waiter.app",
    "buildAndLaunch:mac": "npm run build:mac && npm run launch:mac"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^2.0.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@lexical/react": "^0.11.2",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.10",
    "@mui/styled-engine-sc": "^5.14.10",
    "@mui/styles": "^5.14.0",
    "fountain-js": "^1.1.0",
    "lexical": "^0.11.2",
    "lodash": "^4.17.21",
    "pdfjs-dist": "^3.10.111",
    "pino": "^8.15.1",
    "pino-pretty": "^10.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hotkeys-hook": "^4.4.1",
    "run-s": "^0.0.0",
    "styled-components": "^6.0.8",
    "tss-react": "^4.9.2",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@mixer/parallel-prettier": "^2.0.3",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.1",
    "electron": "^25.5.0",
    "electron-builder": "^24.6.3",
    "electron-vite": "^1.0.27",
    "prettier": "^3.0.1",
    "typescript": "^4.6.4",
    "vite": "^3.0.7",
    "vite-tsconfig-paths": "^4.2.0"
  }
}
