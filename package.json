{
  "name": "waiter",
  "private": true,
  "version": "0.0.9",
  "main": "./out/app/main.js",
  "author": {
    "name": "James Rundquist",
    "email": "james@roboticdonut.com"
  },
  "description": "An AI assisted script wiring tool",
  "scripts": {
    "format": "pprettier --write '**/*.{ts,tsx,d.ts,js,json,html,scss,md,yml,yaml}' '!node_modules/**'",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "clean": "rimraf out && rimraf dist",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config",
    "launch:mac": "if [[ ! -a dist/mac-arm64/waiter.app ]]; then npm run build:mac; fi; open dist/mac-arm64/waiter.app",
    "buildAndLaunch:mac": "npm run build:mac && npm run launch:mac",
    "dist": "electron-vite build && electron-builder --publish always",
    "dist:beta": "electron-vite build && electron-builder --publish always --config.extraMetadata.version=$npm_package_version-beta",
    "dist:alpha": "electron-vite build && electron-builder --publish always --config.extraMetadata.version=$npm_package_version-alpha"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.11.0",
    "@jxa/run": "^1.3.6",
    "@lexical/react": "^0.11.2",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.10",
    "@mui/styled-engine-sc": "^5.14.10",
    "@mui/styles": "^5.14.0",
    "@mui/system": "^5.14.12",
    "electron-updater": "^6.2.1",
    "fountain-js": "^1.1.0",
    "jsdom": "^25.0.0",
    "lexical": "^0.11.2",
    "lodash": "^4.17.21",
    "pdfjs-dist": "^4.2.67",
    "pino": "^8.15.1",
    "pino-pretty": "^10.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hotkeys-hook": "^4.5.0",
    "run-s": "^0.0.0",
    "rxjs": "^7.8.1",
    "styled-components": "^6.0.8",
    "tss-react": "^4.9.12",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@jxa/global-type": "^1.3.6",
    "@mixer/parallel-prettier": "^2.0.3",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.14.199",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
