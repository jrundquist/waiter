{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.ts",
    "app/*",
    "preload/*"
  ],
  "compilerOptions": {
    "outDir": "./out",
    "composite": true,
    "baseUrl": ".",
    "types": [
      "electron-vite/node"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@utils/*": [
        "utils/*"
      ],
    }
  }
}
